<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.edu.udea.compumovil.gr04_20172.lab4.SignOffFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textSingOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cerrar Sesión"
            android:textSize="25dp"
            android:textColorHighlight="@color/colorLight"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.502">
        </TextView>

        <TextView
            android:layout_width="193dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:textSize="15dp"
            android:id="@+id/textSignOut"
            android:text="¡No te vayas!, desiste"
            android:layout_marginTop="61dp"
            app:layout_constraintTop_toBottomOf="@+id/textSingOut"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.502" />

        <TextView
            android:layout_width="148dp"
            android:layout_height="32dp"
            android:textSize="15dp"
            android:id="@+id/textSignOutGood"
            android:gravity="center"
            android:text="Bueno, está bien"
            android:layout_marginTop="49dp"
            app:layout_constraintTop_toBottomOf="@+id/textSignOut"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/buttonSignOut"
            android:onClick="onClick"
            android:layout_width="116dp"
            android:layout_height="50dp"
            android:text="Cerrar sesion"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textSignOutGood"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.104" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
